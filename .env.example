# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/reports
# Or for MySQL: mysql+pymysql://user:password@localhost:3306/reports
# Or for SQLite: sqlite:///./reports.db

# MongoDB (optional)
MONGODB_URL=mongodb://localhost:27017/
MONGODB_DATABASE=reports

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=reports@example.com

# API Keys for External Services
# Stripe (example)
STRIPE_API_KEY=sk_test_...

# Slack Webhook (example)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# S3 Storage (optional)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET=report-storage

# Application Settings
APP_ENV=development  # development, staging, production
LOG_LEVEL=INFO       # DEBUG, INFO, WARNING, ERROR
SECRET_KEY=your-secret-key-for-api-tokens

# API Configuration
API_KEY=your-api-key-for-authentication
API_RATE_LIMIT=100/hour

# MCP Server (optional)
MCP_SERVER_PORT=3000
